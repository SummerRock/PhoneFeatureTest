<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".testactivity.ProgressBarTestActivity">

    <com.example.yanxia.phonefeaturetest.widget.ProgressButton
        android:id="@+id/custom_progress_button"
        android:layout_width="90dp"
        android:layout_height="48dp"
        android:layout_above="@+id/custom_progress_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_bg_selector"
        android:gravity="center"
        app:buttonCornerRadius="7dp"
        app:downloadingShowType="text"
        app:progressButtonDownloadingText="Downloading"
        app:progressColor="@android:color/holo_red_light"
        app:progressTextSize="12sp"
        app:textColor="@android:color/white" />

    <com.example.yanxia.phonefeaturetest.widget.CircleProgressBar
        android:id="@+id/custom_progress_bar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:background="@android:color/holo_blue_dark"
        android:padding="8dp"
        app:max="100"
        app:min="0"
        app:progressBarThickness="6dp"
        app:progressbarBackgroundColor="@android:color/holo_purple"
        app:progressbarColor="@android:color/holo_green_light" />

    <android.support.v7.widget.AppCompatSeekBar
        android:id="@+id/test_seek_bar"
        style="@android:style/Widget.Holo.SeekBar"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/custom_progress_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:max="100"
        android:min="0" />

    <Button
        android:id="@+id/test_reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/test_seek_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Reset Button"
        tools:ignore="HardcodedText" />

    <ProgressBar
        android:id="@+id/test_horizontal_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/test_reset_button"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:progress="30"
        android:progressDrawable="@drawable/horizontal_progress_bar_background" />
</RelativeLayout>